@model IEnumerable<BookApp.Models.Author>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<h2>Number of Authors are: @ViewBag.nAuthors</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Author1)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Author1)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Aid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Aid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Aid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
